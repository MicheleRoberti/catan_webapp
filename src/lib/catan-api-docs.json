      "delete": {
        "tags": ["game-controller"],
        "operationId": "deleteLastTurn",
        "parameters": [{ "name": "gameId", "in": "path", "required": true, "schema": { "type": "integer", "format": "int64" } }],
        "responses": { "204": { "description": "No Content" } }
