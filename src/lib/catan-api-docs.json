        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int64" } }],
        "requestBody": { "content": { "application/json": { "schema": { "$ref": "#/components/schemas/PlayerDTO" } } }, "required": true },
